import random

words = ["apple", "train", "house", "phone", "books"]
word = random.choice(words)

guessed = []
wrong = 0
limit = 6

print("Hangman Game")
print("Guess the word letter by letter")

while wrong < limit:
    display = ""
    for i in word:
        if i in guessed:
            display = display + i
        else:
            display = display + "_"

    print("\nWord:", display)
    print("Wrong attempts left:", limit - wrong) 
// print("Wrong attempts left:", limit - wrong)
//  letter = input("Enter a letter 

    if display == word:
        print("You won the game!")
        break

    letter = input("Enter a letter: ").lower()

    if letter in guessed:
        print("Already guessed")
    elif letter in word:
        guessed.append(letter)
        print("Correct")
    else:
        guessed.append(letter)
        wrong = wrong + 1
        print("Wrong")

if wrong == limit:
    print("\nGame Over")
    print("The word was:", word)
